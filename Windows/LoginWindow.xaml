<Window x:Name="loginWindow" x:Class="WpfApp3.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="250" Left="0" Top="0" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Grid x:Name="loginGrid" Width="250" Margin="0,0,0,0" Height="284.04">
        <TextBox x:Name="loginTextBox" Margin="10,160,10,100" TextWrapping="Wrap" Width="230" Height="24.04"/>
        <Button Content="Login" Margin="10,254,170,10" Click="LoginClick"/>
        <Button Content="Register" Margin="170,254,10,10" Click="RegisterClick"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" Height="25"/>
    </Grid>
</Window>
